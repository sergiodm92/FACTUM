{
  "compilerOptions": {
    "target": "ES2023",
    "lib": [
      "ES2023", "dom"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
    },
    "jsx": "react-jsx" // Configuraci√≥n necesaria para JSX/TSX
  },
  "include": [
    "vite.config.ts",
    "src/**/*"
  ]
}
