{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "dom"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@store/*": ["./store/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["vite.config.ts", "src/**/*"]
}
